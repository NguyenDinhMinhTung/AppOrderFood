<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/itemHienThiBanAn"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:text="Ban1"
        android:textColor="@color/colorGray"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imBanAn"
        android:layout_width="@dimen/size111dp"
        android:layout_height="@dimen/size111dp"
        android:src="@drawable/table_off"
        android:layout_below="@+id/txtTenBanAn"/>

    <ImageView
        android:id="@+id/imGoiMon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/order"
        android:layout_below="@id/imBanAn"
        android:layout_marginLeft="@dimen/size5dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imThanhToan"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/imBanAn"
        android:src="@drawable/payment"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_toRightOf="@id/imGoiMon"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imAnButton"
        android:src="@drawable/hide"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_toRightOf="@id/imThanhToan"
        android:layout_below="@id/imBanAn"
        android:visibility="invisible"/>
</RelativeLayout>